<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="50dp">

    <RadioGroup
        android:id="@+id/rgBeginningCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <RadioButton
            android:id="@+id/rbBeginning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:singleLine="true"
            android:text="@string/beginning"
            android:textColor="@color/radiobutton_text_selected"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbCurrent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:singleLine="true"
            android:text="@string/current"
            android:textColor="@color/radiobutton_text_selected"
            android:textSize="18sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/pain_location"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/ivLocationTeeth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/colorVeryLightBlue"
                    android:padding="1dp"
                    android:src="@drawable/teeth" />

                <ImageView
                    android:id="@+id/ivLocationFaceRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/colorVeryLightBlue"
                    android:padding="1dp"
                    android:src="@drawable/face_right" />

                <ImageView
                    android:id="@+id/ivLocationFaceLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/colorVeryLightBlue"
                    android:padding="1dp"
                    android:src="@drawable/face_left" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/pain_quality"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btnDull"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/dull"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnPulling"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/pulling"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnPulsating"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/pulsating"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnStinging"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/stinging"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btnBurning"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/burning"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnPinsandneedles"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/pinsandneedles"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnTingling"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/tingling"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnNumb"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_effect"
                        android:text="@string/numb"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/pain_intensity"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/sbIntensity"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="390dp"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:padding="10dp"
                        android:progress="0" />

                    <RelativeLayout
                        android:layout_width="390dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingHorizontal="5dp"
                            android:text="@string/no_pain"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvIntensity"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="140dp"
                            android:text="0"
                            android:textColor="@color/colorDarkBlue"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingHorizontal="5dp"
                            android:text="@string/unbearable_pain"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/additionalInformation"
                        android:textSize="18sp"
/>

                    <EditText
                        android:id="@+id/etComment"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:inputType="text|textMultiLine"
                        android:gravity="left"
                        android:maxLines="4"
                        android:textSize="14sp"
                        android:background="@color/colorVeryLightBlue"
                        android:text=""
                        android:padding="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/pain_pattern"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/btnPermSlightFluc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/imageview_border"
                        android:padding="7dp"
                        android:src="@drawable/pattern_perm_slightfluc" />

                    <ImageView
                        android:id="@+id/btnPermStrongFluc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/imageview_border"
                        android:padding="7dp"
                        android:src="@drawable/pattern_perm_strongfluc" />

                    <ImageView
                        android:id="@+id/btnAttFreeInt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/imageview_border"
                        android:padding="7dp"
                        android:src="@drawable/pattern_att_freeint" />

                    <ImageView
                        android:id="@+id/btnAttNoFreeInt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/imageview_border"
                        android:padding="7dp"
                        android:src="@drawable/pattern_perm_nofreeint" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>